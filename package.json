{
  "name": "cotra",
  "version": "0.1.0",
  "packageManager": "yarn@3.2.2",
  "workspaces": {
    "packages": [
      "packages/**"
    ]
  },
  "scripts": {
    "web": "yarn workspace @cotra/web",
    "server": "yarn workspace @cotra/server",
    "prettier:web": "yarn prettier --write ./packages/web/src",
    "prettier:server": "yarn prettier --write ./packages/server/src",
    "start": "docker-compose up -d",
    "stop": "docker-compose down"
  },
  "devDependencies": {
    "prettier": "^2.7.1"
  },
  "engines": {
    "node": ">=16.15.1"
  }
}
